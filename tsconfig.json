{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    // Strict mode disabled to support dynamic canvas import and Prisma generated types
    // Bun-specific files use tsconfig.bun.json for their type checking
    "strict": false,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    // Bun-specific files compiled separately with Bun's bundler
    // See tsconfig.bun.json for Bun-specific TypeScript configuration
    "src/**/*.bun.ts",
    "src/routes-bun"
  ]
}
